{
	"manifest_version": 2,

	"options_page": "options.html",
	"name": "Custom Right-Click Menu",
	"description": "Create a custom right-mouseclick menu.",
	"version": "2.0",

	"background": {
		"scripts": [ "jquery-2.0.3.min.js", "background.js", "crmapi.js" ]
	},

	"content_scripts": [
		{
			"matches": [ "http://*/*", "https://*/*" ],
			"js": [ "jquery-2.0.3.min.js", "contentscript.js", "crmapi.js" ]
		},
		{
			"matches": [ "http://*/*" ],
			"all_frames": true,
			"js": [ "jquery-2.0.3.min.js", "iframecontentscript.js" ]
		}
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": [
		"tabs",
		"<all_urls>",
		"activeTab",
		"storage",
		"contextMenus"
	],

	"web_accessible_resources": [
		"jquery-2.0.3.min.map",
		"jquery-2.0.3.min.js",
		"jquery-2.0.3.js",
		"crmapi.js"
	],

	"optional_permissions": [
		"http://*/",
		"alarms",
		"background",
		"bookmarks",
		"browsingData",
		"clipboardRead",
		"clipboardWrite",
		"contentSettings",
		"cookies",
		"desktopCapture",
		"downloads",
		"history",
		"idle",
		"notifications",
		"management",
		"notifications",
		"power",
		"privacy",
		"topSites",
		"tabCapture",
		"tts",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],

	"icons": {
		"16": "icon-supersmall.png",
		"48": "icon-small.png",
		"128": "icon-large.png"
	}

}